students = []

def add_student(name, marks):
    avg = sum(marks) / len(marks)
    grade = "A" if avg >= 90 else "B" if avg >= 75 else "C"
    students.append({"name": name, "marks": marks, "average": avg, "grade": grade})

def display_students():
    for s in students:
        print(f"{s['name']} - Avg: {s['average']:.2f}, Grade: {s['grade']}")

add_student("Alice", [85, 90, 92])
add_student("Bob", [70, 65, 80])
display_students()
